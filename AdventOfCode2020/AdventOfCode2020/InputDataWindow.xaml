<Window
    x:Class="AdventOfCode2020.InputDataWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:AdventOfCode2020"
    mc:Ignorable="d"
    Title="Data input dialog" Height="360" Width="480" MinWidth="200" MinHeight="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="547*"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Input data:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Bottom"/>
        <TextBox x:Name="tbInput" Grid.Row="1" Margin="10,0,10,5" Text="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="DarkGray" AcceptsReturn="True" />
        
        <StackPanel Grid.Row="2" FlowDirection="RightToLeft" Orientation="Horizontal" Margin="10,0,10,10">
            <Button Grid.Row="2" x:Name="btnOk" Content="OK" HorizontalAlignment="Right" Width="100" Margin="0, 0, 10, 0" Click="btnOk_Click" />
            <Button Grid.Row="2" x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Width="100" Margin="0, 0, 10, 0" Click="btnCancel_Click" />
        </StackPanel>

    </Grid>
</Window>
